@model CharmsFluffyBears.Models.FluffyBearsSizeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="FluffyBears" asp-action="Index" method="get">
    <p>
        <select asp-for="FluffyBearsSize" asp-items="Model.Size">
            <option value="">All</option>
        </select>

        Product Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FluffyBears[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FluffyBears[0].ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FluffyBears[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FluffyBears[0].Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FluffyBears[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FluffyBears)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
